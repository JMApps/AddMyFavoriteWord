<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jmapps.addmyfavoriteword">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_title"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:alwaysRetainTaskState="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.ui.activities.TasksActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.ui.activities.AddNoteActivity"
            android:label="@string/add_note"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".presentation.ui.activities.ChangeNoteActivity"
            android:label="@string/change_note"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".presentation.ui.activities.AddWordActivity"
            android:label="@string/add_word"
            android:theme="@style/AppTheme" />
    </application>

</manifest>