<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_card_margin"
    android:elevation="@dimen/main_card_elevation"
    android:minHeight="@dimen/item_card_min_height"
    app:cardCornerRadius="15dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:minHeight="@dimen/item_card_min_height"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_task_item_color"
            android:layout_width="@dimen/main_padding_big"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="@dimen/main_padding_big"
            android:minHeight="@dimen/item_card_min_height"
            android:textColor="@color/white"
            android:textSize="@dimen/main_app_text_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_task_item_priority"
            android:layout_width="@dimen/main_padding_mini"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/small_text_size" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin_mini"
            android:gravity="start|center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_task_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_task_item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/main_padding_mini"
                    tools:text="Дочитать head first Kotlin" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_task_item_add_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/main_margin_mini"
                    android:gravity="center"
                    android:textSize="@dimen/small_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_task_item_change_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/main_margin_mini"
                    android:gravity="center"
                    android:textSize="@dimen/small_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_task_item_execution_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/main_margin_mini"
                    android:gravity="center"
                    android:textSize="@dimen/small_text_size" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>