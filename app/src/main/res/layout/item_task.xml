<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_card_margin"
    android:elevation="@dimen/main_card_elevation"
    android:minHeight="@dimen/item_card_min_height"
    app:cardCornerRadius="@dimen/main_card_corner">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_task_item_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_card_min_height">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:minHeight="@dimen/item_card_min_height"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_task_item_color"
                android:layout_width="@dimen/main_padding_big"
                android:layout_height="match_parent"
                android:background="@drawable/symmetry_right_circular_color_view"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/main_app_text_size" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox_task_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_margin_mini"
                android:button="@drawable/state_task" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/main_padding_mini">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_task_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingTop="@dimen/main_padding_mini"
                    android:paddingBottom="@dimen/main_padding_mini"
                    android:textStyle="bold"
                    app:fontFamily="@font/gilroy_extra_bold"
                    tools:text="Дочитать head first Kotlin" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_task_item_add_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/main_margin_mini"
                        android:gravity="start"
                        android:textSize="@dimen/small_text_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_task_item_change_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/main_margin_mini"
                        android:gravity="start"
                        android:textSize="@dimen/small_text_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_task_item_execution_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/main_margin_mini"
                        android:gravity="start"
                        android:textSize="@dimen/small_text_size" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>