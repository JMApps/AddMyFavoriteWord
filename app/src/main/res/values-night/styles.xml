<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_toolbar</item>
        <item name="colorPrimaryDark">@color/color_toolbar</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:windowBackground">@color/main_background</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!--    Bottom Sheet dialog styles-->
    <style name="BottomSheetStyleFull" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="colorAccent">@color/color_tools_count</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@color/bottom_sheet_background</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">1000dp</item>
    </style>
</resources>